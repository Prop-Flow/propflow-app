generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model Property {
  id                  String               @id @default(cuid())
  name                String
  address             String
  city                String?
  state               String?
  zipCode             String?
  country             String               @default("USA")
  propertyType        String?
  units               Int?                 @default(1)
  squareFeet          Int?
  yearBuilt           Int?
  buildingCode        String?              @unique
  purchasePrice       Float?
  purchaseDate        DateTime?
  ownerUserId         String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  anomalies           Anomaly[]
  complianceItems     ComplianceItem[]
  leases              LeaseAgreement[]
  leaseOptimizations  LeaseOptimization[]
  maintenanceRequests MaintenanceRequest[]
  marketSnapshots     MarketSnapshot[]
  owner               User?                @relation("PropertyOwner", fields: [ownerUserId], references: [id])
  debts               PropertyDebt[]
  expenses            PropertyExpense[]
  financials          PropertyFinancials?
  income              PropertyIncome[]
  projection          PropertyProjection?
  valuations          PropertyValuation[]
  tenants             Tenant[]
  utilityReadings     UtilityReading[]
  managers            User[]               @relation("PropertyManagers")

  @@index([ownerUserId])
}

model User {
  id                String         @id @default(cuid())
  name              String?
  email             String?        @unique
  emailVerified     DateTime?
  image             String?
  role              String         @default("TENANT")
  firstName         String?
  lastName          String?
  phone             String?
  passwordHash      String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  accounts          Account[]
  notifications     Notification[]
  ownedProperties   Property[]     @relation("PropertyOwner")
  sessions          Session[]
  tenantProfile     Tenant?
  managedProperties Property[]     @relation("PropertyManagers")
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Tenant {
  id                  String                @id @default(cuid())
  propertyId          String
  name                String
  email               String?
  userId              String?               @unique
  phone               String?
  leaseStartDate      DateTime?
  leaseEndDate        DateTime?
  rentAmount          Float?
  status              String                @default("active")
  apartmentNumber     String?
  squareFootage       Float?
  numberOfOccupants   Int                   @default(1)
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  communicationLogs   CommunicationLog[]
  complianceItems     ComplianceItem[]
  documents           Document[]
  leases              LeaseAgreement[]
  leaseOptimizations  LeaseOptimization[]
  maintenanceRequests MaintenanceRequest[]
  property            Property              @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user                User?                 @relation(fields: [userId], references: [id])
  utilityCharges      TenantUtilityCharge[]

  @@index([propertyId])
  @@index([status])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   @default("info")
  read      Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([read])
}

model PropertyFinancials {
  id                     String            @id @default(cuid())
  propertyId             String            @unique
  currentReserves        Float             @default(0)
  recommendedReserves    Float             @default(0)
  reserveCalculationDate DateTime?
  vacancyRate            Float             @default(0)
  estimatedVacancyLoss   Float             @default(0)
  totalMonthlyIncome     Float             @default(0)
  totalMonthlyExpenses   Float             @default(0)
  monthlyNetIncome       Float             @default(0)
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt
  operatingReserve       OperatingReserve?
  debts                  PropertyDebt[]
  expenses               PropertyExpense[]
  property               Property          @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  income                 PropertyIncome[]

  @@index([propertyId])
}

model OperatingReserve {
  id                     String             @id @default(cuid())
  propertyFinancialsId   String             @unique
  currentAmount          Float              @default(0)
  recommendedAmount      Float
  calculationReasoning   String?
  baseMonthsExpenses     Float?
  ageAdjustment          Float?
  unitCountAdjustment    Float?
  minimumReserve         Float?
  reserveCalculationDate DateTime?
  lastCalculated         DateTime?
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt
  propertyFinancials     PropertyFinancials @relation(fields: [propertyFinancialsId], references: [id], onDelete: Cascade)

  @@index([propertyFinancialsId])
}

model MaintenanceRequest {
  id           String   @id @default(cuid())
  propertyId   String
  tenantId     String?
  title        String
  description  String
  status       String   @default("pending")
  priority     String   @default("normal")
  category     String?
  location     String?
  ticketNumber String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  tenant       Tenant?  @relation(fields: [tenantId], references: [id])
  property     Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([tenantId])
  @@index([status])
}

model PropertyExpense {
  id                   String             @id @default(cuid())
  propertyFinancialsId String
  category             String
  customCategoryName   String?
  amount               Float
  frequency            String             @default("monthly")
  description          String?
  dueDate              DateTime?
  isPaid               Boolean            @default(false)
  paidDate             DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  propertyId           String?
  property             Property?          @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyFinancials   PropertyFinancials @relation(fields: [propertyFinancialsId], references: [id], onDelete: Cascade)

  @@index([propertyFinancialsId])
  @@index([category])
  @@index([dueDate])
}

model PropertyDebt {
  id                       String             @id @default(cuid())
  propertyFinancialsId     String
  loanName                 String
  principalBalance         Float
  interestRate             Float
  termLengthMonths         Int
  monthlyPayment           Float
  originationDate          DateTime
  maturityDate             DateTime
  nextPaymentDue           DateTime?
  lender                   String?
  loanType                 String?
  shouldMonitorRefinancing Boolean            @default(true)
  createdAt                DateTime           @default(now())
  updatedAt                DateTime           @updatedAt
  propertyId               String?
  property                 Property?          @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyFinancials       PropertyFinancials @relation(fields: [propertyFinancialsId], references: [id], onDelete: Cascade)

  @@index([propertyFinancialsId])
  @@index([nextPaymentDue])
}

model PropertyIncome {
  id                   String             @id @default(cuid())
  propertyFinancialsId String
  source               String
  customSourceName     String?
  amount               Float
  frequency            String             @default("monthly")
  description          String?
  isRecurring          Boolean            @default(true)
  startDate            DateTime?
  endDate              DateTime?
  dateReceived         DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  propertyId           String?
  property             Property?          @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyFinancials   PropertyFinancials @relation(fields: [propertyFinancialsId], references: [id], onDelete: Cascade)

  @@index([propertyFinancialsId])
  @@index([source])
}

model PropertyValuation {
  id                String   @id @default(cuid())
  propertyId        String
  estimatedValue    Float
  amount            Float?
  source            String?
  purchasePrice     Float?
  valuationDate     DateTime @default(now())
  confidenceScore   Float?
  totalAppreciation Float?
  appreciationRate  Float?
  marketCapRate     Float?
  impliedCapRate    Float?
  methodology       String   @default("INCOME_APPROACH")
  monthlyNOI        Float?
  annualNOI         Float?
  confidence        String?
  notes             String?
  createdAt         DateTime @default(now())
  property          Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId, createdAt])
}

model PropertyProjection {
  id                   String   @id @default(cuid())
  propertyId           String   @unique
  projectionYears      Int      @default(5)
  assumedAppreciation  Float    @default(3.0)
  assumedIncomeGrowth  Float    @default(2.0)
  assumedExpenseGrowth Float    @default(3.0)
  yearlyProjections    Json?
  projectedSaleValue   Float?
  projectedEquity      Float?
  projectedROI         Float?
  lastCalculated       DateTime @default(now())
  property             Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
}

model MarketSnapshot {
  id                String   @id @default(cuid())
  propertyId        String
  zipCode           String
  currentMedianRent Float
  growthVelocity    Float
  vacancyRate       Float
  daysOnMarket      Int
  trends12Month     String
  comparables       String
  confidence        Float
  dataSource        String   @default("RENTCAST")
  createdAt         DateTime @default(now())
  property          Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
}

model LeaseOptimization {
  id              String                @id @default(cuid())
  propertyId      String
  tenantId        String?
  currentRent     Float
  recommendedRent Float
  confidence      String
  reasoning       String
  insights        String
  status          String                @default("pending")
  occupancyRate   Float?
  bedrooms        Int?
  bathrooms       Float?
  squareFeet      Int?
  marketPosition  String?
  changeAmount    Float?
  changePercent   Float?
  reviewedBy      String?
  reviewedAt      DateTime?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  tenant          Tenant?               @relation(fields: [tenantId], references: [id])
  property        Property              @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  recommendations LeaseRecommendation[]

  @@index([propertyId])
  @@index([tenantId])
}

model LeaseRecommendation {
  id                  String            @id @default(cuid())
  leaseOptimizationId String
  type                String
  amount              Float
  description         String
  impact              Float
  createdAt           DateTime          @default(now())
  optimization        LeaseOptimization @relation(fields: [leaseOptimizationId], references: [id], onDelete: Cascade)
}

model UtilityReading {
  id          String   @id @default(cuid())
  propertyId  String
  utilityType String
  readingDate DateTime
  value       Float
  unit        String
  isAnomaly   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  anomaly     Anomaly?
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([readingDate])
  @@index([utilityType])
}

model Anomaly {
  id             String          @id @default(cuid())
  propertyId     String
  readingId      String?         @unique
  utilityType    String
  severity       String
  message        String
  thresholdValue Float
  actualValue    Float
  isResolved     Boolean         @default(false)
  resolvedAt     DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  reading        UtilityReading? @relation(fields: [readingId], references: [id])
  property       Property        @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([createdAt])
}

model LeaseAgreement {
  id              String   @id @default(cuid())
  propertyId      String
  tenantId        String?
  type            String   @default("RESIDENTIAL")
  status          String   @default("DRAFT")
  startDate       DateTime
  endDate         DateTime
  rentAmount      Float
  securityDeposit Float?
  terms           Json?
  escalationType  String?
  escalationValue Float?
  leaseType       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  tenant          Tenant?  @relation(fields: [tenantId], references: [id])
  property        Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([status])
}

model Document {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  url       String
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}

model CommunicationLog {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  type      String   // email, phone, sms, in_person
  direction String   @default("OUTBOUND") // INBOUND, OUTBOUND
  status    String   @default("SENT")     // SENT, DELIVERED, FAILED, RECEIVED
  messageId String?  // ID from external provider (Twilio/Resend)
  subject   String?
  content   String   // Renamed from notes for clarity, or keep notes as alias? Let's use content for the actual message body
  metadata  Json?    // For extra data like cost, error details, etc.
  date      DateTime @default(now())
  
  @@index([tenantId])
  @@index([date])
  @@index([messageId])
}

model ComplianceItem {
  id          String    @id @default(cuid())
  propertyId  String?
  tenantId    String?
  name        String
  status      String
  dueDate     DateTime?
  completedAt DateTime?
  documents   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  tenant      Tenant?   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  property    Property? @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([tenantId])
}

model TenantUtilityCharge {
  id          String   @id @default(cuid())
  tenantId    String
  amount      Float
  type        String
  periodStart DateTime
  periodEnd   DateTime
  isPaid      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}
